---
import MainLayout from "../layouts/MainLayout.astro";
import { Image } from "astro:assets";
import error from "../images/error-404.png";
---

<MainLayout title="404 - Page Not Found">
  <div class="flex flex-col items-center justify-items-center gap-7">
    <Image src={error} alt="Error 404" height={250} class="mt-10" />
    <h1 class="text-5xl font-bold">Page Not Found</h1>
    <p class="text-2xl mb-10">The page you are looking for does not exist.</p>
    <a href="/" class="inline-block bg-slate-300 p-2 mb-6 hover:bg-indigo-500 hover:text-white rounded-lg font-semibold">Go Back Home</a>
  </div>
</MainLayout>
